{
  "root": true,
  "env": {
    "es2022": true
  },
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "sourceType": "module",
    "project": "./tsconfig.json",
  },
  "extends": [
    "plugin:unicorn/all",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "prettier",
  ],
  "plugins": [
    "@typescript-eslint",
  ],
  "rules": {
    "unicorn/prevent-abbreviations": [
      "error",
      {
        "replacements": {
          "props": false,
        },
      },
    ],
  },
  "globals": {
    "Vue": "readable"
  },
}
